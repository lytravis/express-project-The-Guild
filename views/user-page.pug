extends layout.pug

append head
  link(rel="stylesheet" href="/stylesheets/user-page.css")

block content
  div(class="container")
    h1(class="quote") “Faithless is he that says farewell when the road darkens.”
    h2(class="citation") ― J.R.R. Tolkien, The Fellowship of the Ring


    h3: a(href=`/game_shelves/${shelves[0].id}`) Currently Playing
    div(class="current")
      each game in games
        a(class="game" href=`/games/${game.id}`)
          img(src= game.image)

    h2 Game Shelves
    each shelf, index in shelves
      if index > 0
        div(class="custom")
          h3: a(href=`/game_shelves/${shelf.id}`)= shelf.shelfName
          if index > 2
            form(action=`/game_shelves/${shelf.id}/delete` method="post")
              <button style="font-size:24px"><i class="fa fa-trash-o"></i></button>

    div(id="createShelf")
      //- h3 Create a Shelf
      form(action="/game_shelves/new" method="post")
        label(class="createShelf" for="shelfName" )
        input(type="text" name="shelfName" placeholder="Create a new shelf here")
        <button style="font-size:24px"><i class="fa fa-plus-square" aria-hidden="true"></i></button>
